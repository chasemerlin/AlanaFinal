<p id="notice"><%= notice %></p>

<h1>Listing Hospital Readmissions</h1>

<table>
  <thead>
    <tr>
      <th>Provider</th>
      <th>Hospital name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>County name</th>
      <th>Phone number</th>
      <th>Measure name</th>
      <th>Measure</th>
      <th>Compared to national</th>
      <th>Denominator</th>
      <th>Score</th>
      <th>Lower estimate</th>
      <th>Higher estimate</th>
      <th>Footnote</th>
      <th>Measure start date</th>
      <th>Measure end date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospital_readmissions.each do |hospital_readmission| %>
      <tr>
        <td><%= hospital_readmission.provider_id %></td>
        <td><%= hospital_readmission.hospital_name %></td>
        <td><%= hospital_readmission.address %></td>
        <td><%= hospital_readmission.city %></td>
        <td><%= hospital_readmission.state %></td>
        <td><%= hospital_readmission.zip_code %></td>
        <td><%= hospital_readmission.county_name %></td>
        <td><%= hospital_readmission.phone_number %></td>
        <td><%= hospital_readmission.measure_name %></td>
        <td><%= hospital_readmission.measure_id %></td>
        <td><%= hospital_readmission.compared_to_national %></td>
        <td><%= hospital_readmission.denominator %></td>
        <td><%= hospital_readmission.score %></td>
        <td><%= hospital_readmission.lower_estimate %></td>
        <td><%= hospital_readmission.higher_estimate %></td>
        <td><%= hospital_readmission.footnote %></td>
        <td><%= hospital_readmission.measure_start_date %></td>
        <td><%= hospital_readmission.measure_end_date %></td>
        <td><%= link_to 'Show', hospital_readmission %></td>
        <td><%= link_to 'Edit', edit_hospital_readmission_path(hospital_readmission) %></td>
        <td><%= link_to 'Destroy', hospital_readmission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

